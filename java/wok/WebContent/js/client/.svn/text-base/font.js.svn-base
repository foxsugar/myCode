/**
 * 游戏内用到的全部字体
 */
(function($){
    function Font(font,fillStyle,strokeStyle){
        this.font = font;
        this.fillStyle = fillStyle;
        this.strokeStyle = strokeStyle;
    };
    Font.prototype.getSize = function(){
        return parseInt(this.font.match(/\d+/));
    };
    $[0]=new Font("bold 14px 宋体", "#212121",null);
    $[1]=new Font("bold 14px 微软雅黑", "#ffffff",null);
    $[2]=new Font("bold 14px 宋体", "#ffffff",null);
    $[3]=new Font("bold 14px 宋体", "#000000",null);
    $[4]=new Font("12px 宋体", "#c6c9bf",null);
    $[5]=new Font("bold 14px 宋体", "#ffffff","#000000");
    $[6]=new Font("12px 宋体", "#ffffff",null);//美术演示图中的 7、11
    $[7]=new Font("bold 12px 黑体", "#ffffff",null);
    $[8]=new Font("14px 宋体", "#d7dbb9",null);
    $[9]=new Font("bold 12px 黑体", "#bcf4d3","#000000");
    $[10]=new Font("bold 14px 宋体", "#ffffff","#000000");
    $[11]=new Font("bold 14px 宋体", "#ffe5af",null);
    $[12]=new Font("bold 14px 宋体", "#cca076",null);
    $[13]=new Font("12px 宋体", "#32261b",null);
    $[14]=new Font("bold 14px 宋体", "#EFAE00",null);
    $[15]=new Font("14px 宋体", "#fff3bf",null);
    $[16]=new Font("12px 宋体", "#bcf4d3",null);
})(gbox.fonts = gbox.fonts || new Array);